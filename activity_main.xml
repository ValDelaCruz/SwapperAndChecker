<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    android:background="#100000"
    android:gravity="center|top"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swapper 'n Checker"
        android:drawableTint="#00000000"
        android:textSize="35sp"
        android:fontFamily="sans-serif-black"
        android:foregroundTint="#00000000"
        android:textColor="#FFEB3B"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/textfield1"
            android:minHeight="48dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F1F1F1"
            android:textSize="18sp"
            android:textColor="#FAF9F9"
            android:hint="Enter text here"
            tools:ignore="TextFields"/>

        <Button
            android:id="@+id/btnSwap"
            android:onClick="onSwap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:backgroundTint="#FF0000"
            android:text="SWAP"
            android:textSize="18sp"
            android:textColor="#F3EFEF"
            android:textColorHighlight="#00000000"
            app:iconTint="#BDBDBD"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textfield2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:minHeight="48dp"
            android:backgroundTint="#FDFCFC"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:hint="Enter text here"/>

        <Button
            android:id="@+id/btnCheck"
            android:onClick="onCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:backgroundTint="#096058"
            android:text="CHECK"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>